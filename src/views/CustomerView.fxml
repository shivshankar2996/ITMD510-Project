         <font>
            <Font name="System Bold" size="13.0" />
         </font></Button>
      <Label fx:id="lblError" layoutX="358.0" layoutY="284.0" style="-fx-background-color: #FFFFFF;" textFill="#dd1126" />
      <Button layoutX="501.0" layoutY="214.0" mnemonicParsing="false" onAction="#onCustomerRegister" text="Register" textFill="#137c65">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Button>
      <Button layoutX="305.0" layoutY="22.0" mnemonicParsing="false" onAction="#onCustomerBack" text="Back" textFill="#137c65">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>

      </ImageView>
      <AnchorPane layoutY="-2.0" prefHeight="416.0" prefWidth="268.0" styleClass="loginbg" stylesheets="@../application/application.css">
         <children>
            <ImageView fitHeight="210.0" fitWidth="162.0" layoutX="53.0" layoutY="108.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/LoginIconAdmin.png" />
               </image>
            </ImageView>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
